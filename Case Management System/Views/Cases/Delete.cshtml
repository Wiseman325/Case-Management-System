@model Case_Management_System.Models.Case

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Case</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Case Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CaseDescription)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.CaseDescription" readonly />
                    <label>@Html.DisplayNameFor(model => model.CaseDescription)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IncidentDate)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.IncidentDate.ToString("yyyy-MM-dd")" readonly />
                    <label>@Html.DisplayNameFor(model => model.IncidentDate)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IncidentTime)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.IncidentTime" readonly />
                    <label>@Html.DisplayNameFor(model => model.IncidentTime)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.Location" readonly />
                    <label>@Html.DisplayNameFor(model => model.Location)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Severity)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.Severity" readonly />
                    <label>@Html.DisplayNameFor(model => model.Severity)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DateReported)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.DateReported.ToString("yyyy-MM-dd")" readonly />
                    <label>@Html.DisplayNameFor(model => model.DateReported)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CaseType.CaseTypeId)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.CaseType.CaseTypeId" readonly />
                    <label>@Html.DisplayNameFor(model => model.CaseType.CaseTypeId)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Citizen.Id)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.Citizen.Id" readonly />
                    <label>@Html.DisplayNameFor(model => model.Citizen.Id)</label>
                </div>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Officer.Id)
            </dt>
            <dd class="col-sm-9">
                <div class="form-floating">
                    <input class="form-control border-0 shadow" value="@Model.Officer.Id" readonly />
                    <label>@Html.DisplayNameFor(model => model.Officer.Id)</label>
                </div>
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CaseNum" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
