@model Case_Management_System.Models.CitizenCase

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Citizen Case</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="border p-3">
            <h4 class="text-danger">Are you sure you want to delete this?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Citizen.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Citizen.FirstName)
                </dd>   
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Citizen.LastName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Citizen.LastName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Case.CaseNum)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Case.CaseNum)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DateReported)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateReported)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CitizenCaseId" />
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

