@model Case_Management_System.Models.CitizenCase

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Citizen Case</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <h3>Are you sure you want to delete this?</h3>
        <h4>CitizenCase</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Citizen)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Citizen.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Case)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Case.CaseNum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateReported)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateReported)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CitizenCaseId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
